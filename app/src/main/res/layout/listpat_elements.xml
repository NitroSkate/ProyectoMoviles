<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#FF1D484D"
    >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5sp"
            android:gravity="end"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre:"
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:paddingRight="10dp"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:text="Apellido:"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de ingreso:"
                android:textSize="20sp"
                android:textColor="#ffffff"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5sp">

            <TextView
                android:id="@+id/nombre_patient_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="abcd abcd"
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:paddingRight="10dp"/>

            <TextView
                android:id="@+id/apellido_patient_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:text="Polillas devs"/>

            <TextView
                android:id="@+id/birth_patient_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/12/12"
                android:textSize="20sp"
                android:textColor="#ffffff"
                />
        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>